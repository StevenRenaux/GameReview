<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Game Review - {% endblock %}</title>
        {% block stylesheets %}
        <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body class="container-md">
        <div class="main_title_container">
            <h1 class= "main_title">Game Review</h1>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('review_browse') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('review_browse') }}">Games</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Genres</a>
                        <div class="dropdown-menu" style="">
                        {% for genre in genres %}
                            <a class="dropdown-item" href="#">{{genre.name}}</a>
                        {% endfor %}
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        <main>
            <div class="container-main">
                {% block body %}
                {% endblock %}
                <div class="aside-container col-lg-3">
                    <aside>
                        <div class="card mb-3">
                        <h3 class="card-header">Consoles</h3>
                        <ul class="list-group list-group-flush">
                            {% for platform in platforms %}
                                <a href="" class="list-group-item">{{platform.name}}</a>
                            {% endfor %}
                        </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </main>

        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
