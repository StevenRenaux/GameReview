{% extends 'admin/base.html.twig' %}

{% block title %}{{ parent() }} Commentaire{% endblock %}

{% block body %}
<div class="row">
    <h2 class="page__title mt-3">Liste des Commentaires</h1>
</div>

<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Jeu</th>
      <th scope="col">Titre</th>
      <th scope="col" class="col-resume">Résumé</th>
      <th scope="col">Auteur</th>
      <th scope="col">Date de création</th>
      <th scope="col">Date de mise à jour</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {% for comment in comments %}
    <tr>
      <th scope="row">{{comment.id}}</th>
      <td>{{comment.review.game.name}}</td>
      <td>{{comment.title}}</td>
      <td>{{comment.resume}}</td>
      <td>{{comment.author}}</td>
      <td>{{comment.createdAt|date('d-m-Y H:i') }}</td>
      <td>{{comment.updatedAt is not null ? comment.updatedAt|date('d-m-Y H:i')}}</td>
      <td><a href=" {{ path('admin_comment_edit', {'id' : comment.id }) }}">Modifier</a></td>
    </tr>
    {% endfor %}
  </tbody>
</table> 
{% endblock %}

